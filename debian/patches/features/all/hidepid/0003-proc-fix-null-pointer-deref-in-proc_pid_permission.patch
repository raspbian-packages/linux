--- linux-3.2.46.orig/fs/proc/base.c	2013-07-26 19:22:47.000000000 +0000
+++ linux-3.2.46/fs/proc/base.c	2013-07-26 19:22:48.000000000 +0000
@@ -597,6 +597,8 @@
 	bool has_perms;
 
 	task = get_proc_task(inode);
+	if (!task)
+		return -ESRCH;
 	has_perms = has_pid_permissions(pid, task, 1);
 	put_task_struct(task);
 
