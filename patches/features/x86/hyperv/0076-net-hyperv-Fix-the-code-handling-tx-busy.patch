===================================================================
--- linux-3.2.46.orig/drivers/net/hyperv/netvsc_drv.c	2013-07-26 19:19:30.000000000 +0000
+++ linux-3.2.46/drivers/net/hyperv/netvsc_drv.c	2013-07-26 19:19:35.000000000 +0000
@@ -223,13 +223,10 @@
 		net->stats.tx_bytes += skb->len;
 		net->stats.tx_packets++;
 	} else {
-		/* we are shutting down or bus overloaded, just drop packet */
-		net->stats.tx_dropped++;
 		kfree(packet);
-		dev_kfree_skb_any(skb);
 	}
 
-	return NETDEV_TX_OK;
+	return ret ? NETDEV_TX_BUSY : NETDEV_TX_OK;
 }
 
